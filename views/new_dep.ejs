 <html lang="en">
 <head>
 <!-- Required meta tags -->
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1,
shrink-to-fit=no">

 <!-- Bootstrap CSS -->
 <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">

 <title>OrgPro</title>
 </head>
 <body>
 <div class="container">
	<%- include("partials/navbar.ejs") %>
 <div class="jumbotron">
 
<form method="post" action="/new_dep">
	<div class="form-group">
		<label for="name">New Department</label>
		<input type="text" name="dep" class="form-control" id="dep" placeholder="KFC" required>
	</div>
	
	<button type="submit" class="btn btn-primary">Add</button>


</form>
<form method="post" action="/del_dep">
 <div class="form-group">
 		<label for="dep">Departament</label>
 		<select class="form-control form-control-lg" name="department" id="department">
 		<% dep.forEach(function(deps) { %>
 		 <option value="<%- deps["name"] %>"><%- deps["name"] %></option>
 		 <% }) %>
		</select>
 	</div><button type="submit" class="btn btn-primary">Delete</button>
</form>
 </div>

 </div>
 <%- include("partials/scripts.ejs") %>

 </body>

 </html>